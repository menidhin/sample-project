<div class="container">

<h1>Sellers List</h1>
<%= link_to "Create New Seller", new_seller_path, :class => "btn btn-primary" %>
 
<table class="table table-striped">
	<thead>
		<th>Seller Name</th>
		<th>Country</th>
		<th>Actions</th>
	</thead>
	<% @sellers.each do |seller| %>
	<tr>
		<td><%= seller.seller_name %></td>
		<td><%= seller.country %></td>
		<td>
			<%= link_to "Show", seller_path(seller), :class => "btn btn-success" %>
			<%= link_to "Edit", edit_seller_path(seller), :class => "btn btn-warning" %>
			<%= link_to "Delete", seller_path(seller) , method: :delete , data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
		</td>
	</tr>
	<% end %>
</table>
	<%= will_paginate(@seller) %>
</div>
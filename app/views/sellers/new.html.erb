<div class = "container">
	<%= form_for @seller do |f| %>
		<% if @seller.errors.full_messages.any? %>
		  <% @seller.errors.full_messages.each do |error_message| %>
		    <%= error_message if @seller.errors.full_messages.first == error_message %> <br />
	 			<% end %>
	 	<% end %>	
			<div class="col-lg-8">
				<div class="form-group">
					<%= f.label :seller_name %>
					<%= f.text_field :seller_name , :class => "form-control " %>
				</div>
				<div class = "form-group">
					<%= f.label :country %>
					<%= f.text_field  :country , :class => "form-control " %>
				</div>
					<%= f.submit "Submit", :class => "btn btn-success" %>
					<%= link_to "Back", sellers_path , :class => "btn btn-primary " %>
			</div>
	<% end %>
</div>
<div class="container">

<h1>Category List</h1>
<%= link_to "Create Category", new_category_path, :class => "btn btn-primary" %>
 
<table class="table table-striped">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Actions</th>
	</thead>
	<% @categories.each do |category| %>
	<tr>
		<td><%= category.name %></td>
		<td><%= category.description %></td>
		<td>
			<%= link_to "Show", category_path(category), :class => "btn btn-success" %>
			<%= link_to "Edit", edit_category_path(category), :class => "btn btn-warning" %>
			<%= link_to "Delete", category_path(category) , method: :delete , data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
		</td>
	</tr>
	<% end %>
</table>
	<%= will_paginate(@category) %>
</div>
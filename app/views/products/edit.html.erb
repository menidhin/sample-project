<div class="container">
	<%= form_for @product do |f| %>
		<% if @product.errors.full_messages.any? %>
		  <% @product.errors.full_messages.each do |error_message| %>
		    <%= error_message if @product.errors.full_messages.first == error_message %> <br />
	 		<% end %>
		<% end %>
		<div class ="col-lg-8">
			<div class = "form-group">
				<%= f.label :name %>
				<%= f.text_field :name , :class => "form-control"  %>
			</div>
			<div class="form-group">
				<%= f.label :category %>
				<%= f.collection_select :category_id, Category.all, :id, :name, {:prompt => "Select Category"}, {:class => "form-control"} %>
			</div>
			<div class="form-group">
				<%= f.label :seller %>
				<%= f.collection_select :seller_id, Seller.all, :id, :seller_name, {:prompt => "Select Seller"}, {:class => "form-control"} %>
			</div>
			<div class = "form-group">
				<%= f.label :image %>
				<%= f.file_field :image , :class => "form-control " %>
			</div>
			<div class = "form-group">
				<%= f.label :product_type %>
				<%= f.text_field  :product_type , :class => "form-control" %>
			</div>
			<div class = "form-group">
				<%= f.label :price %>
				<%= f.number_field :price , :class => "form-control" %>
			</div>
	
				<%=  f.submit "Submit", :class => "btn btn-success" %>
				<%= link_to "Back", products_path , :class => "btn btn-primary " %>
		</div>
	<% end %>
</div>
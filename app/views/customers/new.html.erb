<div class = "container">
	<%= form_for @customer do |f| %>
		<% if @customer.errors.full_messages.any? %>
		  <% @customer.errors.full_messages.each do |error_message| %>
		    <%= error_message if @customer.errors.full_messages.first == error_message %> <br />
	 			<% end %>
	 	<% end %>	
			<div class="col-lg-8">
				<div class="form-group">
					<%= f.label :customer_name %>
					<%= f.text_field :customer_name , :class => "form-control " %>
				</div>
				<div class="form-group">
					<%= f.label :product %>
					<%= f.collection_select :product_id, Product.all, :id, :name, {:prompt => "Select Product"}, {:class => "form-control"} %>
				</div>	
				<div class = "form-group">
					<%= f.label :city %>
					<%= f.text_field  :city , :class => "form-control " %>
				</div>
					<%= f.submit "Submit", :class => "btn btn-success" %>
					<%= link_to "Back", customers_path , :class => "btn btn-primary " %>
			</div>
	<% end %>
</div>